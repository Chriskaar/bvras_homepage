<!DOCTYPE html>
<html>
<head>
	<%= display_meta_tags %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
	<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
</head>


<body style="height:99%;">

	<div class="ver-admin-sidebar" style="">
		<div class="ver-admin-search">
			<input placeholder="search" />
		</div>
		<div class="ver-admin-nav">
			<ul class="ver-admin-nav-ul">
				<li class="ver-admin-main-li <%= current_page?(admin_root_path) ? 'active' : '' %>"><%= link_to t('admin.page.dashboard.title'), admin_root_path %></li>
				<li class="ver-admin-main-li <%= current_page?(admin_articles_path) ? 'active' : '' %>"><%= link_to t('admin.page.articles.title'), admin_articles_path %></li>
				<li class="ver-admin-main-li <%= current_page?(admin_pages_path) ? 'active' : '' %>"><%= link_to t('admin.page.pages.title'), admin_pages_path %></li>
				<li class="ver-admin-main-li <%= current_page?(admin_inquiries_path) ? 'active' : '' %>"><%= link_to t('admin.page.inquiries.title'), admin_inquiries_path %></li>
				<li class="ver-admin-main-li <%= controller_name == 'users' ? 'active' : '' %>"><%= link_to t('admin.page.users.title'), admin_users_path %>
<!-- 				<ul class="ver-admin-ul-child <%= controller_name == 'users' ? 'active' : '' %>">
					<li class="ver-admin-child-li"><a href="<%= %>"><%= fa_icon 'arrow-right'%> t('admin.page.users.title')%> </a></li>
				</ul> -->
				</li>
			</ul>
		</div>
	</div>

	<div class="hor-admin-topbar" style="top:0;">
		<div class="hor-admin-menu"></div>
			<%= link_to t('sessions.sign_out_title'), destroy_user_session_path, class: 'hor-admin-menu-button pull-right', style: 'margin-right:20px;' %>
			<%= link_to 'Front', root_path, class: 'hor-admin-menu-button pull-right' %>
		</div>
	</div>


	<div style="margin-left:252px;margin-top:50px;"> 
		<div class="cs-admin-banner">
			<span class="admin-banner-title">
				<%= link_to 'Dashboard', admin_root_path %>
			</span>
			<% if controller_name != 'admin' %>
				<span style="font-size:25px;font-weight:700;">
				>
				</span>
				<span class="admin-banner-title">
					<% if @title %>
						<%= link_to @title.capitalize, {controller:controller_name} %>
					<% else %>
						<%= controller_name.capitalize %>
					<% end %>
				</span>
				<span class="admin-banner-small-titel">
					<% if @smallTitle %>
						> <%= @smallTitle.capitalize %>
					<% end %>

				</span>
			<% end %>

		</div>
		<div class="cs-alert" >
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, class: flash_class(key)) %>
			<% end %>
		</div>
		<div class="container-fluid">
			<%= yield %>
		</div>
	</div>
</body>
</html>
