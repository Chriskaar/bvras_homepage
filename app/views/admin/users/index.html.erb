<table class="table table-hover">
	<% @user.each do |user|  %>
	<tr>
		<td><%= user.id %></td>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td>
			<%= link_to admin_user_path(user), class: 'btn btn-info btn-sm' do %>
				<%= fa_icon 'gear' %>
 			<% end %>
		</td>
	</tr>
	<% end %> 
</table>