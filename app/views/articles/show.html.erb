<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Name:</strong>
	  <%= @article.name %>
	</p>

	<p>
	  <strong>Permalink:</strong>
	  <%= @article.permalink %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @article.content %>
	</p>

	<% if current_user.admin %>
	<%= link_to 'Edit', edit_admin_article_path(@article) %> |
	<% end %>
	<%= link_to 'Back', articles_path %>

</div>